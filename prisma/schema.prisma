generator client {
  provider = "prisma-client-js"
  previewFeatures = ["mongodb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model kerix_companies{
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  Title String @unique
  Phone String
  Fax String
  Website String
  Address String
  Activity String
  Manager String
}
// 'Title', 'Phone', 'Fax','Website','Address', 'Activity', 'Manager'